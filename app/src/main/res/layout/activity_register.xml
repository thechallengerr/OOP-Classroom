<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/unnamed" />

        <EditText
            android:id="@+id/mEmail"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_edit_text"
            android:drawableLeft="@drawable/ic_email_gray_24dp"
            android:drawablePadding="16dp"
            android:hint="Email"
            android:padding="16dp"
            android:textSize="18dp"></EditText>



        <EditText
            android:id="@+id/mUser"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit_text"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="16dp"
            android:hint="UserName"
            android:padding="16dp"
            android:textSize="18dp"></EditText>

        <EditText
            android:id="@+id/mPw"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edit_text"
            android:drawableLeft="@drawable/ic_lock_gray_24dp"
            android:drawablePadding="16dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textSize="18dp"></EditText>

        <EditText
            android:id="@+id/ppw"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edit_text"
            android:drawableLeft="@drawable/ic_lock_gray_24dp"
            android:drawablePadding="16dp"
            android:hint="Password Repeat"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textSize="18dp"></EditText>


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radst"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="Student"></RadioButton>

            <RadioButton
                android:id="@+id/radteacher"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="Teacher"></RadioButton>

        </LinearLayout>
        <Button
            android:id="@+id/btn2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_border"
            android:text="Register" />


    </LinearLayout>
</RelativeLayout>